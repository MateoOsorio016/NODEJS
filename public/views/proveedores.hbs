  <div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="formprov">
          <div class="modal-header">						
            <h4 class="modal-title">Agregar proveedor</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          </div>
          <div class="modal-body">					
            <div class="form-group">
              <label>Nit</label>
              <input type="number" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Proveedor</label>
              <input type="text" class="form-control" id="proveedor" required>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" id="proveedorE" required>
            </div>
            <div class="form-group">
              <label>Teléfono</label>
              <input type="text" class="form-control" id="telefonoP" required>
            </div>
            <div class="form-group">
              <label>Cantidad</label>
              <input type="number" class="form-control" id="cantidadP" required>
            </div>
            <div class="form-group">
              <label>Factura</label>
              <input type="number" class="form-control" id="facturaP" required>
            </div>
             <div class="form-group">
              <label>Fecha</label>
              <input type="date" class="form-control" id="fechaP" required>
            </div>
            <div class="form-group">
              <label>Estado</label>
              <select name="Estado" id="estado">
                <option value="">Activo</option>
                <option value="">Inactivo</option>
              </select>
            </div>
            <div class="form-group">
              <label>Categoria</label>
              <select name="Categoria" id="categoria">
                <option value="">Mayorista</option>
                <option value="">Exportador</option>
              </select>
            </div>				
          </div>
          <div class="modal-footer">
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
            <input type="submit" class="btn btn-success" value="Agregar">
          </div>
        </form>
      </div>
    </div>
  </div>

